<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="580dp">

                <TextView
                    android:id="@+id/main_hello_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Hi, Raka!"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/cardview_my_points"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Its trash day!"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/main_hello_text"
                    app:layout_constraintTop_toTopOf="@+id/main_hello_text" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="My Points and Deposits"
                    android:textColor="#473E3E"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/cardview_my_points"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_profile_pic"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="25dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="1000dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.52"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_my_points"
                    android:layout_width="350sp"
                    android:layout_height="75dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="50dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView7">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_title_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="MY POINTS"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/text_numerical_points"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="21dp"
                            android:text="1,000"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="@+id/text_title_points"
                            app:layout_constraintTop_toTopOf="@+id/text_title_points" />

                        <ImageView
                            android:id="@+id/image_points"
                            android:layout_width="41dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="20dp"
                            app:layout_constraintStart_toStartOf="@+id/text_title_points"
                            app:layout_constraintTop_toTopOf="@+id/text_title_points"
                            app:srcCompat="@drawable/coin_icon" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_trash_deposited"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="12dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:layout_constraintStart_toStartOf="@+id/cardview_my_points"
                    app:layout_constraintTop_toBottomOf="@+id/cardview_my_points"
                    tools:ignore="MissingConstraints">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#515151">

                        <TextView
                            android:id="@+id/text_title_trash_deposited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="TRASH DEPOSITED"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/text_numerical_trash_deposited"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="23dp"
                            android:text="1.5 KG"
                            android:textAllCaps="true"
                            android:textColor="#DBDBDB"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="@+id/text_title_trash_deposited"
                            app:layout_constraintTop_toTopOf="@+id/text_title_trash_deposited" />

                        <ImageView
                            android:id="@+id/image_trash_deposited"
                            android:layout_width="41dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="21dp"
                            app:layout_constraintStart_toStartOf="@+id/text_title_trash_deposited"
                            app:layout_constraintTop_toTopOf="@+id/text_title_trash_deposited"
                            app:srcCompat="@drawable/trash_icon" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Redeem Points"
                    android:textColor="#473E3E"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/cardview_my_points"
                    app:layout_constraintTop_toBottomOf="@+id/cardview_trash_deposited" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_gopay"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="5dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    android:clickable="true"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/textView11">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_gopay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:text="GOPAY"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_gopay"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/image_gopay"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/gopay_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_ovo"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="35dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:layout_constraintStart_toEndOf="@+id/cardview_gopay"
                    app:layout_constraintTop_toTopOf="@+id/cardview_gopay">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_ovo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="33dp"
                            android:layout_marginTop="8dp"
                            android:text="OVO"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_ovo"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/image_ovo"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ovo_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_bca"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cardview_ovo">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_bca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="33dp"
                            android:layout_marginTop="8dp"
                            android:text="BCA"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_bca"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/image_bca"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/bca_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_bsi"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="20dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:layout_constraintStart_toStartOf="@+id/cardview_gopay"
                    app:layout_constraintTop_toBottomOf="@+id/cardview_gopay">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_bsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="37dp"
                            android:layout_marginTop="10dp"
                            android:text="BSI"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_bsi"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/image_bsi"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/bsi_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_dana"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:layout_constraintStart_toStartOf="@+id/cardview_ovo"
                    app:layout_constraintTop_toTopOf="@+id/cardview_bsi">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_dana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="10dp"
                            android:text="DANA"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_dana"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/image_dana"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/dana_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_linkaja"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:elevation="8dp"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="30"
                    android:shadowRadius="50"
                    app:cardBackgroundColor="#D1D1D1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:layout_constraintStart_toStartOf="@+id/cardview_bca"
                    app:layout_constraintTop_toTopOf="@+id/cardview_bsi">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_linkaja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17dp"
                            android:layout_marginTop="10dp"
                            android:text="LINK AJA"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_linkaja"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:id="@+id/image_linkaja"
                            android:layout_width="55dp"
                            android:layout_height="54dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/linkaja_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>